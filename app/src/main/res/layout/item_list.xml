<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/gray50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY" />

            <ir.s_mohammadi.iranigpractice.CustomViews.TextViewMedium
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv"
                android:ellipsize="end"
                android:lineSpacingExtra="-5dp"
                android:lines="4"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/iv"
                android:gravity="right"
                android:orientation="horizontal">

                <ir.s_mohammadi.iranigpractice.CustomViews.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/telegram_id"
                    android:textColor="@color/orange"
                    android:textSize="11sp" />

                <ir.s_mohammadi.iranigpractice.CustomViews.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 روز پیش"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_arrow_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/bg_border_arrowup"
                android:src="@drawable/ic_keyboard_arrow_up_black_36dp"
                android:tint="@color/colorAccent" />

            <ir.s_mohammadi.iranigpractice.CustomViews.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_arrow_up"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:text="596"
                android:textColor="@color/colorAccent"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_bookmark_border_black_36dp"
                android:tint="@color/text_secondary" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:paddingRight="5dp">

            <ir.s_mohammadi.iranigpractice.CustomViews.TextViewRegular
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="-5dp"
                android:textColor="@color/gray700"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_description"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_eye" />

                <ir.s_mohammadi.iranigpractice.CustomViews.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="64698"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_share_black_36dp"
                android:tint="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="18dp">

        <View
            android:id="@+id/view_dotted_top"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/dotted"
            android:layerType="software" />

        <ImageView
            android:id="@+id/arrow_dotted_top"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-4.5dp"
            android:src="@drawable/dotarrow1" />

        <View
            android:id="@+id/view_dotted_bttom"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dotted"
            android:layerType="software"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/arrow_dotted_bottom"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-5.5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dotarrow2"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
